# Backend Environment Variables
# Copy this to .env in the backend directory

# Database
DATABASE_URL=sqlite:///./mtg_collection.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost/mtg_collection

# Security
JWT_SECRET=your-super-secret-jwt-key-at-least-256-bits-long
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Keys
TCGPLAYER_PUBLIC_KEY=your-tcgplayer-public-key
TCGPLAYER_PRIVATE_KEY=your-tcgplayer-private-key
SCRYFALL_API_BASE=https://api.scryfall.com

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://your-vercel-app.vercel.app

# Application
DEBUG=False
HOST=0.0.0.0
PORT=8000
